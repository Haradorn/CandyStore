@page
@model CandyStore.Pages.Sales.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sale.Buyer" class="control-label"></label>
                <select asp-for="Sale.BuyerID" class="form-control"
                        asp-items="@Model.BuyerNameSL">
                    <option value="">-- Select Buyer --</option>
                </select>
                <span asp-validation-for="Sale.BuyerID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Sale.Manager" class="control-label"></label>
                <select asp-for="Sale.ManagerID" class="form-control"
                        asp-items="@Model.ManagerNameSL">
                    <option value="">-- Select Manager --</option>
                </select>
                <span asp-validation-for="Sale.ManagerID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Sale.Production" class="control-label"></label>
                <select asp-for="Sale.ProductionID" class="form-control"
                        asp-items="@Model.ProductionNameSL">
                    <option value="">-- Select Production --</option>
                </select>
                <span asp-validation-for="Sale.ProductionID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Sale.SaleDate" class="control-label"></label>
                <input asp-for="Sale.SaleDate" class="form-control" />
                <span asp-validation-for="Sale.SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.Price" class="control-label"></label>
                <input asp-for="Sale.Price" class="form-control" />
                <span asp-validation-for="Sale.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
