@page
@model CandyStore.Pages.Productions.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Production</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Production.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Production.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Production.ProductType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Production.ProductType.ProductTypeName)
        </dd>

        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Production.Sales)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Покупатели</th><th>Дата закупки</th>
                </tr>
                @foreach (var item in Model.Production.Sales)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Buyer.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaleDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Production?.ProductionID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
