@page
@model CandyStore.Pages.Buyers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Buyer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.BuyerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.BuyerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.City.Name)
        </dd>

        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Buyer.Sales)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Закупленная продукция</th><th>Дата закупки</th>
                </tr>
                @foreach (var item in Model.Buyer.Sales)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Production.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SaleDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Buyer?.BuyerID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
